# Environment Variables Template
# Copy this file to .env.local and update with your actual values

# PayloadCMS Configuration (REQUIRED)
PAYLOAD_SECRET=your-payload-secret-key-minimum-32-chars
DATABASE_URL=postgres://username:password@host:port/database

# Vercel Blob Storage (REQUIRED for file uploads)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Email Configuration (REQUIRED for transactional emails)
# Without these, customers won't receive order confirmations or updates
SMTP_HOST=sandbox.smtp.mailtrap.io  # For development, use production SMTP in production
SMTP_PORT=2525                       # Usually 587 for TLS, 465 for SSL, 2525 for Mailtrap
SMTP_SECURE=false                    # Set to 'true' for SSL connections (port 465)
SMTP_USER=your_smtp_username         # Your SMTP service username
SMTP_PASS=your_smtp_password         # Your SMTP service password
SMTP_FROM=noreply@ralhumsports.lk   # Default sender email address

# Site Configuration
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# PayHere Payment Gateway (Optional - for online payments)
PAYHERE_MERCHANT_ID=your-merchant-id
PAYHERE_MERCHANT_SECRET=your-merchant-secret
PAYHERE_CURRENCY=LKR
PAYHERE_SANDBOX=true

# Development/Testing Options
NODE_ENV=development